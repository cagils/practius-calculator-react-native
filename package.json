{
  "name": "practius-calculator-react-native",
  "version": "1.0.0",
  "description": "Pure React Native based calculator example aiming for the latest best practices and patterns recommended",
  "private": false,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "pretty": "prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged && npm run test",
    "flow": "flow",
    "flow-stop": "flow stop"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/"
  },
  "keywords": [
    "react native",
    "react",
    "calculator",
    "example",
    "mobile",
    "best practices",
    "showcase",
    "patterns",
    "architecture"
  ],
  "author": "Çağıl 'MadChuckle' Şeker <cagils@gmail.com>",
  "contributors": [
    ""
  ],
  "license": "MIT",
  "dependencies": {
    "mathjs": "^3.16.5",
    "prop-types": "^15.6.0",
    "react": "16.0.0-beta.5",
    "react-native": "^0.49.3",
    "react-native-vector-icons": "^4.4.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "0.56.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "react-test-renderer": "^16.4.2"
  },
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/jspm_packages"
    ]
  }
}
